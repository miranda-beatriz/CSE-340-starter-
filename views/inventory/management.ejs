<%# Management View %>

<% if (title) { %>
    <h1><%= title %></h1>
<% } else { %>
    <script>window.location.href = "/";</script>
<% } %>

<%# Flash Messages %>
<% if (Array.isArray(messages) && messages.length > 0) { %>
    <div class="flash-messages">
        <% messages.forEach(function(message) { %>
            <p class="flash-message"><%= message %></p>
        <% }); %>
    </div>
<% } %>

<%# Links to Management Options %>
<div class="management-links">
    <br>
    <br>
    <a href="/inv/add-classification">Add New Classification</a>
    <br>
    <a href="/inv/add-inventory">Add New Inventory Item</a>
</div>

<br>

<h2>Manage Inventory</h2>

<br>

<p>Choose a classification to see those inventory items.</p>

<br>

<select name="classification" id="classification">
    <option value="">-- Select Classification --</option>
    <% classificationSelect.forEach(function(classification) { %>
        <option value="<%= classification.classification_id %>">
            <%= classification.classification_name %>
        </option>
    <% }); %>
</select>

<br>

<table id="inventoryDisplay"></table>

<noscript>JavaScript must ve enabled to use this page.</noscript>

<script src="/js/inventory.js"> </script>


